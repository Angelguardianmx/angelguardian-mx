  .column
    - if @weather_note
      - if @weather_note.post
        article.el-tiempo
          .header
            p.cintillo= @weather_note.balazo
            = link_to main_app.post_path(*@weather_note.post.url_params) do
              h2= @weather_note.title
    article.mas-recientes
      h2.titulo-bloque Mas recientes
      ul.related
        - @latest_news.each do |post|
          - if post.id
            li
              = link_to "#{post.hour} | #{post.title}", main_app.post_path(*post.url_params)

    - unless @portada.resumen_on_top
      article.resumen
        h2.titulo-bloque Resumen
        = raw @portada.soundcloud_frame
    article.foto-nota
      #foto-nota.carousel.slide
        /! Carousel items
        .carousel-inner
          - @picture_only.each_with_index do |post, i|
            .item class="#{i == 0 ? 'active': ''}"
              .header
                = image_tag('transparent.png', class: 'size-g lazy', "data-original" => post.image.url(:size_g) )
                p.date= post.author.email
                h2= post.title
        /! Carousel nav
        /a.carousel-control.left data-slide="prev" href="#myCarousel"
        /a.carousel-control.right data-slide="next" href="#myCarousel"














