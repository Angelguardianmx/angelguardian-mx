section.section_b
  .column
    - if  @secundaria.posts[0]
      - post =  @secundaria.posts[0] 
      article.noticia-secundaria-a
        .header
          h2.titulo-tag Aumento de tarifas
          p.cintillo= post.cintillo
          = image_tag('transparent.png', class: 'size-d lazy', "data-original" => post.image.size_d)
          h2
            = link_to post.title, main_app.post_path(*post.url_params)
  
          p.date=  post.date_and_hour
          = link_to 'lectura rapida', main_app.quick_view_crowdblog_posts_path(id: post.id), class: 'lectura-rapida', remote: true

      ul.related
        li
          = link_to 'Aumentara 1 peso el transporte publico en autobuses', "#"
        li
          = link_to 'En julio tarjeta de descuento FEC', '#'
